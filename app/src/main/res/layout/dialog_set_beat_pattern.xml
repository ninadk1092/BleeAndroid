<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="@dimen/padding_medium">

        <TextView
            android:id="@+id/textViewDialogHeader"
            android:text="@string/text_import_pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:textSize="@dimen/text_medium"
            android:background="@color/blee_orange"
            android:padding="@dimen/padding_medium"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_x_beats"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_medium"/>

            <TextView
                android:id="@+id/textViewBeatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toLeftOf="@+id/linLayCountControl"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/margin_xlarge"/>
            <LinearLayout
                android:id="@+id/linLayCountControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:background="@drawable/play_layout_bg">

                <ImageView
                    android:id="@+id/imgCountPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_medium"
                    android:src="@android:drawable/arrow_up_float"
                    />
                <ImageView
                    android:id="@+id/imgCountMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:padding="@dimen/margin_medium"
                    android:src="@android:drawable/arrow_down_float"
                    />
            </LinearLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/imgCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@android:drawable/btn_dialog"/>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_icon_bg"/>


</RelativeLayout>